{
  "extends": "@hansanghyeon/tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest",
      "@emotion/react/types/css-prop"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es6",
    "module": "esnext",
    "typeRoots": [
      "../../node_modules/@types",
      "./typings",
      "../../node_modules/@emotion/react/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "storybook-static",
    "dist",
    "lib"
  ],
}